---
import { Image} from "astro:assets";
import { type AstroComponentFactory } from "astro/runtime/server/index.js";
import { Layout } from 'virtual:astro-blog-plugin/components'
import { type BlogSchemaTransformed } from "../../schema/BlogSchema";

import Breadcrumbs from "../Breadcrumbs.astro";

type Props = {
    entry: BlogSchemaTransformed;
    Content: AstroComponentFactory;
}

const { entry, Content } = Astro.props
---

<Layout title={ entry.title } description={ entry.description }>
    <div class="blog-post">
        <Breadcrumbs breadcrumbs={[{href: '/', text: 'Home'}, {href: '/blog', text: 'Blog'}, {text: entry.title}]} />
        <div class="text-slate-100 md:grid md:grid-cols-[min-content_1fr] md:gap-8">
            <div>
                <Image src={entry.imageSrc} alt={entry.imageAlt || ''} class="h-64 rounded-[30px] object-cover md:max-w-xs" />
                <p class="mt-4">ðŸ“… { entry.datePublished }</p>
                <p class="font-bold font-display text-xl my-4">{ entry.title }</p>
                <p>{ entry.description }</p>

                <hr class="border-none py-4">

                <span class="block text-lg font-bold">Author:</span>
                <p class="block mb-4">{ entry.author.name }</p>
                {
                    !!entry.author.imageSrc && <Image src={ entry.author.imageSrc } alt={ entry.author.imageAlt || entry.author.name } class="w-1/2 aspect-square rounded-full block" />
                }

                <hr class="border-none py-4">

                <span class="block mb-2 text-lg font-bold">Tags:</span>
                <div class="flex flex-wrap items-center">
                    {
                        entry.tags.map(tag => (
                            <span class="px-4 py-1 rounded-full bg-rose-400 shadow" style={`background-color: ${ tag.bgColor }; color: ${ tag.textColor }`}>{ tag.tag }</span>
                        ))
                    }
                </div>
            </div>
            <div>
                <Content />
            </div>
        </div>
    </div>
</Layout>
